.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  font-family:"Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arial,sans-serif;
  box-sizing: border-box;
} 
button{
  margin-left: 0rpx;
  margin-right: 0rpx;
  margin-top:10rpx;
  width:100%;
}
progress{
  margin-top:20rpx;
}
.slide-image {
  width: 100%;
}
.textcenter {
  display:flex;
  align-items:center;
  justify-content:center;
}


.appSwiper{
  width: 100%;
  height: 300rpx;
}
.appSwiper image{
  width: 100%;
  height: 100%;
}
.countContainer{
  margin: 0 4%;
  width: 92%;
}
.count{
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  margin-top: 20rpx;
  border: 1px solid #53C0F5;
}
.countTop{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 22rpx;
  color: #fff;
  background-color: #53C0F5;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.countTop view{
  margin: 0 20rpx;
}
.countContent{
  color: #1B749F;
  padding: 30rpx 20rpx;
}
.date{
  font-size: 22rpx;
  line-height: 25rpx;
  text-align:right;
}
.date text{
  margin-left: 20rpx;
}
.needContainer{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}
.need{
  font-size:30rpx;
  font-weight:500;
  line-height:42rpx;
}
.needTime{
  font-size:22rpx;
  font-weight:400;
  /* position: relative;
  bottom: -14rpx; */
}
.needDay{
  font-size:144rpx;
  font-family:Haettenschweiler;
  padding: 0 10rpx;
  position:relative;
  top:30rpx; 
}
.needContainer view{
  height: 144rpx;
  display: flex;
  align-items: flex-end;
}