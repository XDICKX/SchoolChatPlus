/* pages/information/information.wxss */

page{
  background-color: #fbfbfb;
}
.changeHead{
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
  color: #000;
  border-top: 1px solid #EDEDED;
  border-bottom: 1px solid #EDEDED;
  padding: 20rpx 66rpx 20rpx 40rpx;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.view{
  padding-left: 40rpx;
  border-top: 1px solid #EDEDED;
  border-bottom: 1px solid #EDEDED;
  background-color: #fff;
}
.view :first-child{
  border-top: 0rpx solid #000;
}
.container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
  color: #000;
  line-height: 37rpx;
  border-top: 1px solid #EDEDED;
  position: relative;
  padding:26rpx 66rpx 26rpx 0; 
  
}
.head{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}
.right{
  width: 12rpx;
  height: 20rpx;
  position:absolute;
  top:43%;
  right:23rpx;
  margin-left:10rpx;
}
.red{
  color: #DA4F49;
}
.notice{
  font-size: 18rpx;
  color: #9b9b9b;
  line-height: 25rpx;
  padding: 27rpx 0rpx 10rpx 40rpx;
}
.notice image{
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
  position: relative;
  top: 5rpx;
}
.btn{
  padding-top: 28rpx;
  
}
.btn view{
  margin: 0 auto;
  width: 240rpx;
  height: 50rpx;
  background-color: #eff3f8;
  border-radius: 16rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #9b9b9b;
}
.change{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #fff;
}
/*性别模态框  */
.modelContainer{
  position: fixed;
  background-color: rgba(0, 0, 0, 0.3);
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.model{
  position:fixed;
  top:30%;
  width:74%;
  background-color:#fff;
  border-radius:7rpx;
  padding:5%;
  left:8%;
  font-size:26rpx;
}
.modelTitle{
  font-size:30rpx;
  padding-bottom:26rpx;
  border-bottom:1px solid #ccc;
  margin-bottom:20rpx;
}
.modelContent view{
  margin-top:25rpx;
  display:flex;
  justify-content:space-between;

}
.getTel{
  margin: 0;
  padding: 0;
  background-color: #fff;
  border: 0;
  font-size: 26rpx;
  color: #DA4F49;
  display: inline;
  line-height: 26rpx;
}
.getTel::after{
  border: 0;
}